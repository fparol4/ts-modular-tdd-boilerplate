{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "@core/*": ["app/core/*"],
      "@configs/*": ["configurations/*"],
      "@interfaces/*": ["interfaces/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "enviroments"]
}
